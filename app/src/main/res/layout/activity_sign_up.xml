<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userinterface.authentication.SignUp">

    <ImageView
            android:src="@drawable/applogo_150"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            style="@style/EdittextTheme"
            android:id="@+id/EtName" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Enter your Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            style="@style/EdittextTheme"

            android:id="@+id/EtEmail" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/EtName"
            app:layout_constraintStart_toStartOf="@+id/EtName" app:layout_constraintEnd_toEndOf="@+id/EtName"
            android:hint="Enter your Email-Id"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            style="@style/EdittextTheme"
            android:id="@+id/EtMnum"
            android:hint="Enter your Mobile Number" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/EtEmail"
            app:layout_constraintStart_toStartOf="@+id/EtEmail" app:layout_constraintEnd_toEndOf="@+id/EtEmail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            style="@style/EdittextTheme"
            android:id="@+id/EtMeterNum"
            app:layout_constraintStart_toStartOf="@+id/EtMnum" app:layout_constraintEnd_toEndOf="@+id/EtMnum"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/EtMnum"
            android:hint="Enter your Meter Number"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            style="@style/EdittextTheme"
            android:id="@+id/EtPass"
            app:layout_constraintStart_toStartOf="@+id/EtMnum" app:layout_constraintEnd_toEndOf="@+id/EtMnum"
            android:hint="Enter your password"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/EtMeterNum"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Etrepass"
            style="@style/EdittextTheme"
            app:layout_constraintStart_toStartOf="@+id/EtPass" app:layout_constraintEnd_toEndOf="@+id/EtPass"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/EtPass"
            android:hint="Retype your Password"/>
    <Button
            android:text="Signin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            style="@style/ButtongrennTheme"
            android:id="@+id/Bsignup" app:layout_constraintStart_toStartOf="@+id/Etrepass"
            app:layout_constraintEnd_toEndOf="@+id/Etrepass" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Etrepass"/>
    <TextView
            android:text="Already Have an Account! Login!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            android:id="@+id/Tvlogin" app:layout_constraintStart_toStartOf="@+id/Bsignup"
            app:layout_constraintEnd_toEndOf="@+id/Bsignup" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Bsignup"
    />


</android.support.constraint.ConstraintLayout>