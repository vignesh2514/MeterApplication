<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userinterface.authentication.Login">

    <ImageView
            android:src="@drawable/applogo_150"
            android:layout_width="37dp"
            android:layout_height="42dp"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:maxLength="10"
            android:id="@+id/EtMobileNumber"
            android:gravity="center"
            style="@style/EdittextTheme"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:singleLine="true" android:hint="Enter Your Mobile Number" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/EtPassword"
            android:gravity="center"
            style="@style/EdittextTheme"
            app:layout_constraintStart_toStartOf="@+id/EtMobileNumber"
            app:layout_constraintEnd_toEndOf="@+id/EtMobileNumber"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/EtMobileNumber"
            android:hint="Enter your Password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/ButtongrennTheme"
            android:id="@+id/Blogin" app:layout_constraintStart_toStartOf="@+id/EtPassword"
            app:layout_constraintEnd_toEndOf="@+id/EtPassword" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/EtPassword" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Don`t have an account ! Sign Up?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            android:id="@+id/TvSignup" app:layout_constraintStart_toStartOf="@+id/Blogin"
            app:layout_constraintEnd_toEndOf="@+id/Blogin" android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Blogin"/>
    <ImageView
            android:src="@drawable/mayaa"
            android:layout_width="185dp"
            android:layout_height="136dp"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Powered by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="9sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/TvSignup"
            app:layout_constraintEnd_toEndOf="@+id/TvSignup" app:layout_constraintStart_toStartOf="@+id/TvSignup"
            app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Inesh Smart Energy (P) Ltd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.125"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"/>
</android.support.constraint.ConstraintLayout>