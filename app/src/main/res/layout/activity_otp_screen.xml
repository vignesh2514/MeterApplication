<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userinterface.authentication.OtpScreen">

    <ImageView
            android:src="@drawable/applogo_150"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.501"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            style="@style/EdittextTheme"
            android:id="@+id/Etotp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Enter received OTP here"/>
    <Button
            android:text="Verify Otp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ButtongrennTheme"
            android:id="@+id/Bverifyotp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/Etotp" app:layout_constraintStart_toStartOf="@+id/Etotp"
            app:layout_constraintEnd_toEndOf="@+id/Etotp"/>
</android.support.constraint.ConstraintLayout>