<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userinterface.CategoriesScreen">

    <Button
            android:text="INSTANT and HISTORY"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:elevation="5dp"
            android:id="@+id/binshist" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@style/ButtongrennTheme"/>
    <Button
            android:text="CONSUMPTION"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/bconsump" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/binshist" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@style/ButtongrennTheme"/>
    <Button
            android:text="PAYMENT"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/bpaym" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bconsump" app:layout_constraintStart_toStartOf="@+id/bconsump"
            app:layout_constraintEnd_toEndOf="@+id/bconsump" style="@style/ButtongrennTheme"/>
    <Button
            android:text="LOAD BALANCE"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/bloadbalance" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bpaym" app:layout_constraintStart_toStartOf="@+id/bpaym"
            app:layout_constraintEnd_toEndOf="@+id/bpaym" style="@style/ButtongrennTheme"
    />
</android.support.constraint.ConstraintLayout>